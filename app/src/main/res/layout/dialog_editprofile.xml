<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="350dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="20dp"
    android:layout_marginHorizontal="20dp"
    android:layout_gravity="center"
    android:id="@+id/cardviewEditProfile"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:orientation="vertical"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:fontFamily="@font/inter_bold"
            android:layout_gravity="center"
            android:text="Edit Profile"
            android:textColor="@color/darkpurple"
            android:textSize="30sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp"
            android:orientation="horizontal"
            >

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginRight="10dp"
                android:layout_gravity="center"
                android:src="@drawable/round_account_box_24"/>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/textviewUsername"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="New username">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_textviewUsername"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:background="@drawable/rounded_edittext"/>
            </com.google.android.material.textfield.TextInputLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp"
            android:orientation="horizontal"
            >

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginRight="10dp"
                android:layout_gravity="center"
                android:src="@drawable/round_lock_person_24"/>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textviewPassword"
                android:hint="New password">
                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/et_textviewPassword"
                    android:inputType="text"
                    android:background="@drawable/rounded_edittext"/>
            </com.google.android.material.textfield.TextInputLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="30dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/saveEditProfile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:paddingVertical="13dp"
                android:layout_weight="1"
                android:text="SAVE"
                android:textSize="15sp"
                android:backgroundTint="@color/pink"
                android:textColor="@android:color/white"
                android:fontFamily="@font/inter_bold"/>

            <Button
                android:id="@+id/cancelEditProfile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:paddingVertical="13dp"
                android:layout_weight="1"
                android:text="CANCEL"
                android:textSize="15sp"
                android:backgroundTint="@color/pink"
                android:textColor="@android:color/white"
                android:fontFamily="@font/inter_bold"/>
        </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>